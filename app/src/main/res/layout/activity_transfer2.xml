<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_transfer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.naufalagusta.atm.transfer">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editno"
            android:layout_centerHorizontal="true"
            android:inputType="none"
            android:text="Masukkan Jumlah Transfer Anda"
            android:textColor="#000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSetor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/btn1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editSetor"
            android:layout_alignStart="@+id/editSetor"
            android:layout_below="@+id/editSetor"
            android:layout_marginTop="5dp"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn1"
            android:layout_centerHorizontal="true"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editSetor"
            android:layout_alignRight="@+id/editSetor"
            android:layout_alignTop="@+id/btn2"
            android:text="3" />

        <Button
            android:id="@+id/btn4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn1"
            android:layout_alignStart="@+id/btn1"
            android:layout_below="@+id/btn1"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn2"
            android:layout_alignStart="@+id/btn2"
            android:layout_alignTop="@+id/btn4"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn3"
            android:layout_alignStart="@+id/btn3"
            android:layout_alignTop="@+id/btn5"
            android:text="6" />

        <Button
            android:id="@+id/btn7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn4"
            android:layout_alignStart="@+id/btn4"
            android:layout_below="@+id/btn4"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn5"
            android:layout_alignStart="@+id/btn5"
            android:layout_alignTop="@+id/btn7"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn6"
            android:layout_alignStart="@+id/btn6"
            android:layout_below="@+id/btn6"
            android:text="9" />

        <Button
            android:id="@+id/btn0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn8"
            android:layout_alignStart="@+id/btn8"
            android:layout_below="@+id/btn8"
            android:text="0" />

        <Button
            android:id="@+id/btnDel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn7"
            android:layout_alignRight="@+id/btn7"
            android:layout_alignTop="@+id/btn0"
            android:text="Del" />

        <Button
            android:id="@+id/btnOk"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn9"
            android:layout_alignStart="@+id/btn9"
            android:layout_alignTop="@+id/btn0"
            android:text="OK" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn0"
            android:layout_centerHorizontal="true"
            android:text="Jumlah Saldo Terbaru" />

        <EditText
            android:id="@+id/editSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnOk"
            android:layout_alignLeft="@+id/btn7"
            android:layout_alignRight="@+id/btnOk"
            android:layout_alignStart="@+id/btn7"
            android:layout_below="@+id/textView5" />

        <EditText
            android:id="@+id/editTransfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editSaldo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Masukkan Nomor Rekening"
            android:textColor="#000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignRight="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:inputType="number" />
    </RelativeLayout>
</ScrollView>
